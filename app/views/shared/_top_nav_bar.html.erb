<div class="navbar navbar-fixed-top">
  <div class="navbar-inner header_background_color">
    <div class="container header_container_width">
      <%= link_to "Fizzybar", root_path , :class => "brand" %>
      <div class="nav-collapse">
        <ul class="nav pull-right">
          <% if user_signed_in? %>
            <li> <%= link_to "My Bars", user_bars_path( current_user ) %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Account <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li> <%= link_to 'Change email', edit_user_path( current_user ) %> </li>
                <li class="divider"></li>
                <li> <%= link_to "Logout", destroy_user_session_path, :method => :delete %> </li>
              </ul>
            </li>
          <% else %>
            <li> <%= link_to "Login", new_user_session_path %> </li>
            <li> <%= link_to "Sign Up", new_user_registration_path %> </li>
            <li> <%#= link_to "Sign in With Facebook", user_omniauth_authorize_path(:facebook), :id => "facebook_sign_in"  %> </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
