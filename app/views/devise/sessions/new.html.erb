
<div class="signin_container">
<h1 class="login_heading">Log In</h1>
<div class="form_container">

	<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

				<%= f.input :email, :required => false, :autofocus => true, input_html: { class: 'input_styling' }, :placeholder => "Email", label: false %>
				<%= f.input :password, :required => false, :autofocus => true, input_html: { class: 'input_styling password_background' }, :placeholder => "Password", label: false %>
				<div class="remember_me">
				<%= f.input :remember_me, :as => :boolean, label: false, :inline_label => 'Remember Me' %>
				</div>
				<%= link_to "Forgot your password?", new_password_path(resource_name), :class => "forgotpswrd" %>
				<%= f.button :submit, "Log In", :class => "btn btn-info signin_btn" %>
				<div class="dont_have">
				Don't have an account !
				<%= link_to " Sign Up", new_registration_path(resource_name), :class => "" %>
			</div>

	<% end %>

</div>
</div>
