<h1>My bars</h1>

<div class="tabbable"> <!-- Only required for left/right tabs -->
  <ul id="bars-tab" class="nav nav-tabs">
    <li class="active">
      <a href="#manage-tab" data-toggle="tab" id="manage-link">Manage</a>
      <%#= link_to 'Manage', bars_url( tab: 'manage' ), remote: true, id: 'manage-link' %>
    </li>
    <li>
      <!-- <a href="#tab2" data-toggle="tab">Stats</a> -->
      <%= link_to 'Stats', bars_url( tab: 'stats' ), remote: true, id: 'stats-link' %>
    </li>
  </ul>
  <div class="tab-content">

    <%# TAG-1 %>
    <div class="tab-pane active" id="manage-tab">
      <div class="red">
        <div class="row padding_btm">
          <div class="span3">
            <h4>Fizzy Bar</h4>
          </div><!-- span3 -->
          <div class="span9 newbar_btn_alignright">
            <%= link_to 'Create New Bar', new_bar_path, class: 'btn btn-info' %>
          </div><!-- span9 newbar_btn_alignright -->
        </div><!-- row -->
        <div class="row show-grid embeded_padding">
          <%= render partial: 'bar_box', collection: @bars %>
        </div> <!-- row  -->
      </div><!-- red -->
    </div><!-- tab-pane -->

    <%# TAG-2 %>
    <div class="tab-pane" id="stats-tab">
      <p></p>
    </div>

  </div><!-- tab-content -->
</div><!-- tabbable -->



