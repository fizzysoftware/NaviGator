<% if params['tab'] == 'stats' %>
  $('#manage-link').parent().removeClass('active')
  $('#stats-link').parent().addClass('active')
  $('#stats-tab').html( "<%=j render( partial: 'stats_content') %>")
  $('#manage-tab').removeClass('active')
  $('#stats-tab').addClass('active')
<% else %>
  $('#stat-boxes').html( "<%=j render partial: 'stat_box', collection: @bars %>")
<% end %>
