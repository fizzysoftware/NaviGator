<div class="signin_container">
<h1 class="login_heading">Forgot Password</h1>
<div class="form_container">
	<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
			  <%= f.error_notification %>
			    <%= f.input :email, :required => true, label: false, input_html: { class: 'input_styling' }, :placeholder => "Email" %>
			    <%= f.button :submit, "Send me reset password instructions", :class => "btn btn-info signin_btn" %>
			  
			<% end %>

</div>
</div>
</div>