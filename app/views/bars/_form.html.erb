<%= simple_form_for(@bar) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :name, input_html: { class: 'input-xxlarge' }  %>
    <%= f.input :message, :input_html => { maxlength: '70' }, :hint => 'Not more than 70 characters.' %>
    <%= f.input :link %>
    <%= f.input :link_url %>
    <%= f.input :text_color, input_html: { class: 'colorpicker' } %>
    <%= f.input :bg_color, input_html: { class: 'colorpicker' } %>
    <%= f.input :link_text_color, input_html: { class: 'colorpicker' } %>
    <%= f.input :link_bg_color, input_html: { class: 'colorpicker' } %>
    <%= f.input :active %>




<div class="row">

        <div class="hero-unit">
          <h1>New Bar</h1>
          <p class="tagline">Thank you for visiting out little slice of the internet. If you would like to get into contact with our team simply fill out the nifty form below. Cheers!</p>  
        </div><!--end hero unit -->

        <section class="span6">
            <div class="control-group">
    
              <div class="controls controls-row">
                <%= f.input :name, input_html: { class: 'input-xxlarge' }, :placeholder => "Cool Person" %>
              </div>
            </div>

            <div class="control-group">
              <div class="controls">
                 <%= f.input :message, :input_html => { maxlength: '70',  class: 'input-xxlarge' }, :hint => 'Not more than 70 characters.', :placeholder => "Hello. Type your message below."  %>
              </div>
            </div>

            <div class="control-group">
              <label class="control-label" for="inputEmail"><i class="icon-question-sign"></i> Subject</label>
              <div class="controls">
                <input type="text" class="input-xxlarge" id="inputSubject" placeholder="what's up?">
              </div>
            </div>

            <div class="control-group">
              <label class="control-label" for="inputEmail"><i class="icon-pencil"></i> Message</label>
              <div class="controls">
                <textarea rows="6" class="input-xxlarge" placeholder="What's on your mind?"></textarea>
              </div>
            </div>

            <div class="control-group">
    <div class="controls">
      <button type="submit" class="btn btn-success">Send Message</button>
    </div>

          
          <br class="clear">


                
        </div></section><!-- end left -->

        <section class="span6">
          <div class="well">
             <iframe width="100%" height="350" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.com/maps?f=q&amp;source=s_q&amp;hl=en&amp;geocode=&amp;q=new+york+city&amp;aq=&amp;sll=37.6,-95.665&amp;sspn=60.867771,135.263672&amp;t=m&amp;ie=UTF8&amp;hq=&amp;hnear=New+York&amp;z=11&amp;iwloc=A&amp;output=embed"></iframe>
          </div><!--end well -->
        </section><!--end right --> 
      </div>






</div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

