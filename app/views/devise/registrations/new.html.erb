<div class="container">
  <div class="row">
    <div class="span4 offset4 well">

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
<legend>Please Sign Up</legend>
  <div class="form-inputs">
	 <%= f.input :name, :required => true, :autofocus => true, input_html: { class: 'span4' }, :placeholder => "Nameame" %>
    <%= f.input :email, :required => true, :autofocus => true, input_html: { class: 'span4' }, :placeholder => "Email" %>
	<%= f.input :username, :required => true, :autofocus => true, input_html: { class: 'span4' }, :placeholder => "Username" %>
    <%= f.input :password, :required => true, input_html: { class: 'span4' }, :placeholder => "Password" %>
    <%= f.input :password_confirmation, :required => true, input_html: { class: 'span4' }, :placeholder => "Password Confirmation" %>
  </div>

  
    <%= f.button :submit, "Sign up", :class => "btn btn-info btn-block" %>
  
<% end %>

<%= render "devise/shared/links" %>
    </div>
  </div>
</div>