<%= simple_form_for @image, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :attachment_file_name %>
  <%= f.input :attachment_content_type %>
  <%= f.input :attachment_file_size %>
  <%= f.input :imageable_id %>
  <%= f.input :imageable_type %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                images_path, :class => 'btn' %>
  </div>
<% end %>
