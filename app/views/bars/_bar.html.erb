<div style="width: 100%;
	   height: 45px;
	   position: absolute;
	   top: 0;
	   left: 0;
	   right: 0;
	   bottom: 0;
	   background-color: <%= bar.bg_color || '#384b52' %>;
	   z-index: 9999;
	   border-bottom: 2px solid #ccc;">
  <div style="margin: 0 auto; width: 1280px;">
    <h1 style="width:625px;
  			height:46px;
  			text-align: right;
  			color: <%=  bar.text_color || '#fff' %>;
  			line-height: 46px;
  			font-size: 13px;
  			float: left;">
  			<%= bar.message %>
  	</h1>
    <div style="float: right; width: 640px;">
  	 <%= link_to bar.link, "//#{bar.link_url}", id: 'fizzybar-link', target: "_blank",
                         style: "color: #{ bar.link_text_color || '#000'};
  														width: 100px;
  														height: 22px;
  														display: block;
  														margin-top: 11px;
														  background: #{ bar.link_bg_color || '#e7e7e7' };
														  text-align: center;
														  border-radius: 3px;
														  line-height: 22px;" %>
    </div>
  </div>
</div>
